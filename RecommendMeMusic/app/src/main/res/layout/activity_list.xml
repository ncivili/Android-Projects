<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.android.npcf34.recommendmemusic.ListActivity">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:columnCount="3"
        android:rowCount="15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/smilarText"
            android:id="@+id/similarToText"
            android:layout_row="0"
            android:layout_column="0"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/artistSearchedForText"
            android:layout_row="3"
            android:layout_column="0" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="396dp"
            android:id="@+id/artistDisplayView"
            android:layout_row="13"
            android:layout_column="0"
            android:background="#ff00bf9e" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/newSearchText"
            android:id="@+id/backButton"
            android:layout_row="14"
            android:layout_column="0"
            style="@android:style/TextAppearance.DeviceDefault.Widget.Button"
            android:enabled="true"
            android:focusable="false" />

    </GridLayout>
</RelativeLayout>
